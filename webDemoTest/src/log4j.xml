<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j-1.2.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %p %c{1}:%L - %m%n" />
		</layout>
	</appender>
	
	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/webDemoTest"/>
		<param name="Append" value="true"/>
		<param name="DatePattern" value="'-'yyyy-MM-dd'.txt'"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %p %c{1}:%L - %m%n" />
		</layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="com.lutongnet.test">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework">
		<level value="info" />
	</logger>	
	
	<logger name="org.springframework.jdbc">
		<level value="debug" />
	</logger>	

	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>
	
</log4j:configuration>
